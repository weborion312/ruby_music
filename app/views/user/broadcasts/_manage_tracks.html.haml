.title.orange.text-left
  %h2 Broadcast Tracks
.popup-holder
  .broadcast-tracks-list
    - if broadcast.present?
      .products-block
        .holder.scrollable
          .scroll-content
            %ul.products-list
              - broadcast.tracks.each do |track|
                %li
                  .products-box
                    .visual
                      - if track.artwork.present?
                        = link_to (image_tag track.artwork.img64.url, :width => '43', :height => '45'), '#!'+track_path(track)
                    .text-holder
                      - if track.name.present?
                        %span= track.name
                    = link_to 'edit', edit_user_track_path(track), :class => 'edit'
    = link_to 'Upload', new_user_broadcast_path, :class => 'broadcasts-upload-button'
